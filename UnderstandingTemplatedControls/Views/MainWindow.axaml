<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UnderstandingTemplatedControls.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:uc="using:UnderstandingTemplatedControls.Views"
		xmlns:my="using:UnderstandingTemplatedControls.Controls"
		x:DataType="vm:MainWindowViewModel"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UnderstandingTemplatedControls.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="UnderstandingTemplatedControls">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<StackPanel Spacing="5" Margin="10">
		<TextBlock>Just render your control here</TextBlock>
		<my:MyControl HorizontalAlignment="Stretch" FileName="{CompiledBinding File1}" />

		<TextBlock>And now with Validation enabled</TextBlock>
		<TextBox Classes="clearTextButton" Text="{CompiledBinding File1}" />
		<TextBox Classes="clearTextButton" Text="{CompiledBinding File2}" />
	</StackPanel>
</Window>
